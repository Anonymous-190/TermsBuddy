{
    "manifest_version": 3,
    "name": "Privacy Policy Summarizer",
    "version": "1.0",
    "description": "Summarizes privacy policies using AI.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "content.js"
    },
    "icons": {
      "48": "icon.png"
    }
  }
  